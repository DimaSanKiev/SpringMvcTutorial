<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloWorldBean" class="ua.burdyga._2_spring.bean._1_core.HelloWorld">
        <property name="name" value="Dima"/>
    </bean>

    <bean id="customParserBean" class="ua.burdyga._2_spring.bean._3_bean_scopes._1_singleton.CustomParserBean"
          scope="singleton">
        <property name="message" value="message set in xml config for bean"/>
    </bean>

    <bean id="uiWidgetBean" class="ua.burdyga._2_spring.bean._3_bean_scopes._2_prototype.UIWidgetBean"
          scope="prototype">
        <property name="message" value="message set in xml config for bean"/>
    </bean>

    <!-- Spring Constructor-Based DI -->
    <bean id="computerBean" class="ua.burdyga._2_spring.bean._4_di._1_constructor_di.ComputerBean">
        <constructor-arg ref="hardDriveBean"/>
    </bean>

    <bean id="computerBean2" class="ua.burdyga._2_spring.bean._4_di._1_constructor_di.ComputerBean">
        <constructor-arg ref="hardDriveBean"/>
        <constructor-arg ref="graphicsCardBean"/>
        <constructor-arg ref="cpuBean"/>
    </bean>

    <bean id="hardDriveBean" class="ua.burdyga._2_spring.bean._4_di._1_constructor_di.HardDriveBean" scope="prototype"/>

    <bean id="graphicsCardBean" class="ua.burdyga._2_spring.bean._4_di._1_constructor_di.GraphicsCardBean"
          scope="singleton"/>

    <bean id="cpuBean" class="ua.burdyga._2_spring.bean._4_di._1_constructor_di.CpuBean" scope="singleton"/>

    <!-- Spring Setter-Based DI  -->
    <bean id="shoppingCartBean" class="ua.burdyga._2_spring.bean._4_di._2_setter_di.ShoppingCartBean">
        <property name="product" ref="productBean"/>
    </bean>

    <bean id="shoppingCartBean2" class="ua.burdyga._2_spring.bean._4_di._2_setter_di.ShoppingCartBean"
          p:date="2015-01-01"
          p:product-ref="productBean">
    </bean>

    <bean id="productBean" class="ua.burdyga._2_spring.bean._4_di._2_setter_di.ProductBean">
        <property name="name" value="Cologne Versace"/>
        <property name="description" value="Fragrance"/>
        <property name="price" value="7"/>
    </bean>

    <!-- Spring Injecting Inner Beans -->
    <bean id="airplaneBean" class="ua.burdyga._2_spring.bean._4_di._3_inner_beans.AirplaneBean">
        <property name="manufacturer" value="Boeing"/>
        <property name="wingSpan" value="50"/>
        <property name="fuelCapacity" value="50000"/>
        <property name="engine">
            <bean id="engine" class="ua.burdyga._2_spring.bean._4_di._3_inner_beans.EngineBean">
                <property name="manufacturer" value="Rolls-Royce"/>
                <property name="horsePower" value="10000"/>
            </bean>
        </property>
    </bean>

    <bean id="airplaneBean2" class="ua.burdyga._2_spring.bean._4_di._3_inner_beans.AirplaneBean">
        <property name="manufacturer" value="NASA"/>
        <property name="wingSpan" value="50"/>
        <property name="fuelCapacity" value="50000"/>
        <property name="engine">
            <bean class="ua.burdyga._2_spring.bean._4_di._3_inner_beans.EngineBean">
                <property name="manufacturer" value="TrentXWB"/>
                <property name="horsePower" value="10000"/>
            </bean>
        </property>
    </bean>

    <!-- Spring Injecting Collection -->
    <bean id="collectionExample" class="ua.burdyga._2_spring.bean._4_di._4_collections.CollectionExample">
        <property name="exampleList">
            <list>
                <value>Credit Card</value>
                <value>Cash on Delivery</value>
                <value>Check</value>
                <value>Cash</value>
            </list>
        </property>

        <property name="exampleSet">
            <set>
                <value>Acura</value>
                <value>BMW</value>
                <value>Cadillac</value>
                <value>Dodge</value>
            </set>
        </property>

        <property name="exampleMap">
            <map>
                <entry key="1" value="Gift Card"/>
                <entry key="2" value="Buy 1 Get 1 Free"/>
                <entry key="3" value="Sale"/>
                <entry key="4" value="Cash Back"/>
            </map>
        </property>

        <property name="exampleProp">
            <props>
                <prop key="one">Server Name</prop>
                <prop key="two">User Name</prop>
                <prop key="three">Password</prop>
                <prop key="four">Secure Token</prop>
            </props>
        </property>
    </bean>

    <bean id="collectionExample2" class="ua.burdyga._2_spring.bean._4_di._4_collections.CollectionExample2">
        <property name="usersList">
            <list value-type="ua.burdyga._2_spring.bean._4_di.UserBean">
                <ref bean="userBean"/>
                <ref bean="userBean2"/>
            </list>
        </property>
    </bean>

    <bean id="userBean" class="ua.burdyga._2_spring.bean._4_di.UserBean">
        <property name="name" value="Bobby Flay"/>
    </bean>

    <bean id="userBean2" class="ua.burdyga._2_spring.bean._4_di.UserBean">
        <property name="name" value="Sakai"/>
    </bean>

</beans>
